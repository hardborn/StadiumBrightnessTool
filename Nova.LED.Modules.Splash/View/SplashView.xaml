<Window x:Class="Nova.LED.Modules.Splash.View.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashView"
        Width="414"
        Height="236"
        Background="#D92BA8E2"
        BorderBrush="#FF008DFF"
        BorderThickness="3"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Label Name="label1"
               Margin="19,22,17,80"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="48"
               Foreground="MintCream">
            <Label.BitmapEffect>
                <OuterGlowBitmapEffect GlowSize="15" />
            </Label.BitmapEffect>
            Splash Screen
        </Label>
        <Label Name="label2"
               Height="28"
               Margin="19,0,17,15"
               VerticalAlignment="Bottom"
               Content="{Binding Status}"
               Foreground="White" />
    </Grid>
</Window>
