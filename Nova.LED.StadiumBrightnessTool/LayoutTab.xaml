<UserControl x:Class="Nova.LED.StadiumBrightnessTool.LayoutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="http://hardborn.com/UI/MetroUI/Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Nova.LED.StadiumBrightnessTool"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <Grid>
        <Controls:MetroAnimatedTabControl Controls:TabControlHelper.IsUnderlined="True">
            <TabItem Controls:ControlsHelper.HeaderFontSize="16" Header="Configuration Mode">
                <local:LocationProfileView />
            </TabItem>
            <TabItem Controls:ControlsHelper.HeaderFontSize="16" Header="Adjustment Mode">
                <local:BrightnessAdjustmentView />
            </TabItem>
        </Controls:MetroAnimatedTabControl>
    </Grid>
</UserControl>
