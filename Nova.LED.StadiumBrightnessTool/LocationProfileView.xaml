<UserControl x:Class="Nova.LED.StadiumBrightnessTool.LocationProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:Nova.LED.StadiumBrightnessTool.Behaviors"
             xmlns:canvas="clr-namespace:System.Windows.Controls"
             xmlns:content="http://hardborn.com/UI/MetroUI"
             xmlns:control="clr-namespace:Nova.LED.StadiumBrightnessTool.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:Nova.LED.StadiumBrightnessTool.View"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources />
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="60" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Margin="0,0,0,8"
                           HorizontalAlignment="Center"
                           Text="LEDBox Group" />
                <!--  Style="{StaticResource Heading2}"  -->
                <ListBox ItemsSource="{Binding BoxGroups}"
                         SelectedItem="{Binding CurrentBoxGroup}"
                         SnapsToDevicePixels="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!--<control:LEDBoxGroupToolItem />-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <i:Interaction.Behaviors>
                                    <behaviors:FrameworkElementDragBehavior />
                                </i:Interaction.Behaviors>
                                <Image Grid.Column="0"
                                       Width="30"
                                       Height="32"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Source="/Resources/Image/cabinet-32.png" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Margin="10,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Text="{Binding IndexLocation}" />
                                    <TextBlock Grid.Row="1"
                                               Margin="10,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Text="{Binding BoxCount}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
        <!--<content:LoremIpsum Margin="{StaticResource SplitLeft}" />-->

        <!--<content:LoremIpsum Grid.Column="2" Margin="{StaticResource SplitRight}" />-->
        <Grid Grid.Column="2" AllowDrop="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <!--<control:DesignerCanvas x:Name="MyDesigner"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        AllowDrop="True"
                                        ApplyTransform="True"
                                        Background="#25000000"
                                        FocusVisualStyle="{x:Null}"
                                        Focusable="true" />-->

                <ItemsControl HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              AllowDrop="True"
                              Background="WhiteSmoke"
                              DataContext="{Binding CurrentBoxGroup}"
                              ItemsSource="{Binding BoxGroups}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <canvas:ZoomableCanvas ApplyTransform="True"
                                                   RealizationLimit="1000"
                                                   RealizationPriority="Background"
                                                   RealizationRate="10" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding ElementPxPointX}" />
                            <Setter Property="Canvas.Top" Value="{Binding ElementPxPointY}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding DataContext.LEDBoxes,
                                                                RelativeSource={RelativeSource TemplatedParent}}"
                                          SnapsToDevicePixels="True"
                                          Style="{StaticResource BoxGroupDesignItemStyle}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <i:Interaction.Behaviors>
                        <behaviors:FrameworkElementDragBehavior />
                        <behaviors:FramworkElementDropBehavior />
                    </i:Interaction.Behaviors>

                </ItemsControl>
            </ScrollViewer>
            <Button Grid.Row="1"
                    Height="24"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Command="{x:Static ApplicationCommands.Save}"
                    CommandTarget="{Binding ElementName=MyDesigner}"
                    Content="Save" />
        </Grid>



        <!--<GridSplitter Grid.Column="4" />-->

    </Grid>
</UserControl>
